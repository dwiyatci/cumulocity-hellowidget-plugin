{
  "name": "cumulocity-hellowidget-plugin",
  "version": "2.0.0",
  "description": "A demo app for showcasing creation of a custom Cumulocity UI widget plugin",
  "keywords": [
    "cumulocity",
    "m2m",
    "examples",
    "demo",
    "boilerplate",
    "cumulocity ui plugin",
    "cumulocity custom widget"
  ],
  "homepage": "https://github.com/dwiyatci/cumulocity-hellowidget-plugin",
  "bugs": "https://github.com/dwiyatci/cumulocity-hellowidget-plugin/issues",
  "license": "MIT",
  "author": "Glenn Dwiyatcita <glenn.dwiyatcita@cumulocity.com> (https://tiny.cc/dwiyatci)",
  "repository": {
    "type": "git",
    "url": "https://github.com/dwiyatci/cumulocity-hellowidget-plugin.git"
  },
  "scripts": {
    "preinstall:clean": "node ./preinstall.js rimraf yarn",
    "install:clean": "yarn upgrade",
    "start": "c8y server -u https://glenn.cumulocity.com -k",
    "build": "npm run clean && c8y build:app",
    "deploy:easy": "npm run clean:tmp && c8y deploy:target target.json",
    "deploy:fast": "npm run deploy -- -p build/hellowidgetapp.zip",
    "deploy": "npm run clean:tmp && c8y deploy:app hellowidgetapp",
    "clean": "rimraf build",
    "clean:tmp": "rimraf _build_for_deploy",
    "lint": "eslint --cache --",
    "test": "karma start -- hellowidgetapp"
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "cumulocity-ui-build": "http://resources.cumulocity.com/webapps/ui/8.0.0.tar.gz"
  },
  "devDependencies": {
    "angular-mocks": "1.5.8",
    "babel-core": "6.24.1",
    "babel-eslint": "7.2.2",
    "babel-preset-env": "1.4.0",
    "cumulocity-tools": "2.0.16",
    "eslint": "3.19.0",
    "eslint-config-airbnb-es5": "1.1.0",
    "eslint-plugin-react": "6.10.3",
    "fs-extra": "2.1.2",
    "glob": "7.1.1",
    "jasmine-core": "2.5.2",
    "karma": "1.6.0",
    "karma-babel-preprocessor": "6.0.1",
    "karma-jasmine": "1.1.0",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "karma-phantomjs-launcher": "1.0.4",
    "karma-spec-reporter": "0.0.31",
    "lodash": "4.17.4",
    "sinon": "2.1.0",
    "tentacle.js": "0.1.0"
  }
}
